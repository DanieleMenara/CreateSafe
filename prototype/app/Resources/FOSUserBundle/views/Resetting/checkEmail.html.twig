{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block additionalStylesheets %}
    <style>
        p {
            font-size: 1.2em;
            margin: 0 10px;
        }

        .account-wall {
            padding-left: 50px;
            padding-right: 50px;
        }
    </style>
{% endblock %}

{% block fos_user_content %}
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-sm-offset-4">
                <div style="position: relative; text-align: center">
                    <a href="{{ path('homepage') }}"><img class="text-center" id="logo" alt="CreateSafe Logo" src="{{ asset("/images/logo/logo.png") }}"></a>
                    <h1 class="text-center login-title">Resetting almost complete</h1>
                </div>
                <div style="text-align: center;" class="account-wall">
                    <h1 style="font-size: 2em">Resetting email sent!</h1>
                    <div style="font-size: 5.5em; color: cadetblue;">
                        <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
                    </div>
                    <p>We've sent you an email.</p>
                    <p>Please follow the link on your email in order to be able to reset your password.</p>
                </div>
            </div>
        </div>
    </div>
{% endblock fos_user_content %}
