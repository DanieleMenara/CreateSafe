{% trans_default_domain 'FOSUserBundle' %}

{% block additionalStylesheets %}
    <style>
        .form-control
        {
            margin-bottom: 10px;
        }
    </style>
{% endblock %}

<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">Reset Password</h1>
            <div class="account-wall">
                {% if invalid_username is defined %}
                    <div class="alert alert-danger alert-dismissible fade in" role="alert"><button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <p>Invalid Email: {{ invalid_username }} </p>
                    </div>
                {% endif %}
                <form class="form-signin" action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
                    <div>
                        <label for="username" class="sr-only">Email</label>
                        <input class="form-control" type="email" id="username" name="username" required="required" placeholder="Email"/>
                    </div>
                    <div>
                        <input class="btn btn-lg btn-primary btn-block" type="submit" value="Submit" />
                    </div>
                </form>
            </div>
            <a href="/" class="text-center new-account">CreateSafe</a>
        </div>
    </div>
</div>