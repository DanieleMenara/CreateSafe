{% trans_default_domain 'FOSUserBundle' %}

{% block additionalStylesheets %}
    <style>
        .form-control
        {
            margin-bottom: 10px;
        }
    </style>
{% endblock %}


<div style="position: relative; text-align: center">
    <a href="{{ path('homepage') }}"><img class="text-center" id="logo" alt="CreateSafe Logo" src="{{ asset("/images/logo/logo.png") }}"></a>
    <h1 style="font-size: 2em" class="text-center login-title">Request Password Reset</h1>
</div>
<div class="account-wall">
    {% if invalid_username is defined %}
        <div class="alert alert-danger alert-dismissible fade in" role="alert"><button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <p>Invalid Email: {{ invalid_username }} </p>
        </div>
    {% endif %}
    <form class="form-signin" action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
        <div>
            <label for="username" class="sr-only">Email</label>
            <input class="form-control" type="email" id="username" name="username" required="required" placeholder="Email"/>
        </div>
        <div>
            <input class="btn btn-lg blueButton btn-block" type="submit" value="Submit" />
        </div>
    </form>
</div>