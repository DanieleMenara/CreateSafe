{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block additionalStylesheets %}
    <style>
        p {
            font-size: 1.2em;
            margin: 0 10px;
        }
    </style>
{% endblock %}

{% block fos_user_content %}
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-sm-offset-4">
                <div style="position: relative; text-align: center">
                    <a href="{{ path('homepage') }}"><img class="text-center" id="logo" alt="CreateSafe Logo" src="{{ asset("/images/logo/logo.png") }}"></a>
                    <h1 class="text-center login-title">Registration almost complete</h1>
                </div>
                <div style="text-align: center;" class="account-wall">
                    <h1 style="font-size: 2em">Confirmation email sent!</h1>
                    <div style="font-size: 5.5em; color: cadetblue;">
                        <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
                    </div>
                    <p>We've sent an email to <b>{{ user.email }}</b>.</p>
                    <p>You must click the link on the email to be able to fully login.</p>
                </div>
            </div>
        </div>
    </div>
{% endblock fos_user_content %}
